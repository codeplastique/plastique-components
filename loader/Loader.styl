Plastique-Loader() {
  $name = '.Loader'

  .Loader {
    display: flex;
    opacity 0
    transition-duration 0.5s
    visibility hidden

    &_active {
      opacity 1
      visibility visible
    }

    &__inner {
      position: relative;
      border-radius: 50%;
      //background: #97cdb2;
      margin: auto;
      width: 3.5rem;
      height: 3.5rem;

      &:before
      &:after {
        content ""
        width: 100%;
        height: 100%;
        background-color: #798bfc;
        border-radius: 50%;
        opacity: 0.6;
        position: absolute;
        animation: loader-inner 1.5s ease-in-out infinite;
      }

      &:after {
        animation-delay: -.5s;
      }

      @keyframes loader-inner {
        0% {
          transform: scale(0.0);
        }
        100% {
          transform: scale(1.2);
          opacity: 0
        }
      }
    }
  }
}
