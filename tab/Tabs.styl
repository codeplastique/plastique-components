Plastique-Tabs($tabsBorderColor = #9bbdff, $backgroundColor = white) {
  .Tabs{
    position: relative;

    &__menu{
      margin-bottom 1rem
    }

    &__item{
      width 100%;

      &_active{
        border-color: #9bbdff #9bbdff $backgroundColor !important;
        background: linear-gradient(to bottom, rgba(42,114,255,0.09), transparent) !important;
        box-shadow: 0 3px 10px -1px #fff inset;
        color: #346dd5 !important;
      }

      &:not(.Tabs__item_active){
        border-bottom-color: $tabsBorderColor !important
        &:hover{
          border-color: #c8dbfc #c8dbfc $tabsBorderColor !important
        }
      }
    }

    &__section{
    }
  }
}