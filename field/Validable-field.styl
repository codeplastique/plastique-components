Plastique-Validable-field() {
  .Validable-field {
    $name = '.Validable-field';
    $height = 2.375rem;
    $inputBorderRadius = .5rem
    position: relative;

    //&:hover {
    //  {$name}__icon {
    //    opacity 1 !important
    //  }
    //}

    &_with-prefix {
      flex-grow 1;

      {$name}__input {
        border-bottom-right-radius: 0;
        border-top-right-radius: 0;
      }
    }

    &_with-btn{
      {$name}__input{
        padding-right: 1.75rem;
      }
    }

    &_invalid {
      &:hover {
        {$name}__input{
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
        }
        {$name}__message {
          background: #d53748;
          transition-delay: 0s !important
          visibility: visible;
          opacity: 1;
        }
      }
    }

    //&__icon {
    //  position: absolute;
    //  top: 0;
    //  right 0
    //  line-height: $height
    //  padding-right: .75rem;
    //  font-size: 1rem;
    //  color: rgba(155, 202, 187, 0.49);
    //  cursor pointer
    //  opacity 0
    //  transition-duration 0.1s
    //
    //  &:hover {
    //    color: #98b3e1;
    //
    //    ~ {$name}__message {
    //      visibility visible
    //      opacity 1
    //      transition-delay: .2s;
    //    }
    //
    //    ~ {$name}__input {
    //      border-radius $inputBorderRadius $inputBorderRadius 0 0
    //    }
    //  }
    //}

    &__input {
      &:focus {
        ~ {$name}__message {
          right -.15rem
          left -.15rem
        }
      }
    }

    &__message {
      visibility hidden
      top 100%
      opacity 0
      transition-duration 0.2s
      position absolute
      background: #95b3e6;
      padding: .375rem .75rem;
      z-index: 1;
      border-radius: 0 0 .5rem .5rem;
      color white
      font-size .8rem
      transition-property opacity
      right: 0;
      left: 0;
      white-space: initial;
      text-align: left;
      transition-delay: 0s;
    }

    &_reverse-info {
      {$name}__message {
        border-radius: .5rem .5rem 0 0;
        bottom 100%
        top auto
      }

      {$name}__icon {
        &:hover {
          ~ {$name}__input {
            border-radius 0 0 $inputBorderRadius $inputBorderRadius
          }
        }
      }
    }
  }
}