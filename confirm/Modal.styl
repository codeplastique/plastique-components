Plastique-Modal($zIndex = 1000, $background = rgba(0, 0, 0, 0.2), $contentVerticalMargin = 35vh, $contentBorderRadius = .5rem) {
$name = '.Modal'
  .Modal {
    position fixed;
    z-index: $zIndex;
    left 0;
    top 0;
    width 100%;
    height 100%;
    overflow auto;
    background: $background;

    &_center {
      display flex
      overflow hidden
      {$name}__content{
        margin: $contentVerticalMargin auto auto;
      }
    }

    &__content {
      background-color white;
      border-radius: $contentBorderRadius;
      box-shadow: 0 0.5rem 3rem 0 rgba(0, 0, 0, 0.2);
    }
  }
}