Plastique-Dropdown($borderRadius = .5rem) {
.Dropdown {
    $name = '.Dropdown'
    $height = 2.375rem;

    min-height $height;
    position relative;
    background white;
    border-radius $borderRadius;

    &_clickable {
      cursor pointer;

      .Dropdown__search {
        cursor pointer;
      }
    }

    &_disabled {
      background-color: #f2f4f5;

      {$name}__text {
        color #bbbbbb !important;
      }

      {$name}__close-btn {
        pointer-events none
      }
    }

    &_active{
      z-index 20;
    }

    &_straight {
      border-radius $borderRadius $borderRadius 0 0;

      .Dropdown__menu {
        border-top-color white;
        border-radius 0 0 $borderRadius $borderRadius;
      }

      .Dropdown__search {
        z-index 1
        border-radius $borderRadius $borderRadius 0 0;
      }

      .Dropdown__item {
        border-top 0.0625rem solid #f5f5f5;
      }
    }

    &_reverse {
      border-radius 0 0 $borderRadius $borderRadius;

      .Dropdown__search {
        z-index 1
        border-radius 0 0 $borderRadius $borderRadius;
      }

      .Dropdown__menu {
        border-bottom-color white;
        border-radius $borderRadius $borderRadius 0 0;
        bottom $height;
      }

      .Dropdown__item {
        border-bottom 0.0625rem solid #f5f5f5;
      }
    }

    &__icon {
      position absolute;
      right .75rem;
      line-height $height;
      top 0;
      color rgba(0, 0, 0, 0.2);
    }

    &__load-icon {
      @extends .Dropdown__icon
      font-size .9rem;
      color #929292;
    }

    &__close-btn {
      @extends .Dropdown__icon
      cursor pointer;
      font-size .9rem;
      right .75rem;
      z-index 19;

      &:hover {
        color #989898;
      }
    }

    &__search {
      padding-right 1.2rem
      background transparent !important;
      position: relative;
    }

    &__menu {
      box-sizing content-box;
      position absolute;
      right 0;
      left 0;
      background white;
      border 0.0625rem solid #ced4da;
      overflow-y auto;
    }

    &__text {
      position absolute;
      top: 0.0625rem
      padding 0 .75rem;
      left: 0.0625rem
      line-height 2.25rem;
      white-space nowrap
      right: 1.2rem;
      overflow: hidden;
      text-overflow: ellipsis;

      //&_fake{
      //  color red
      //}
    }

    &__item {
      padding 0 .75rem;
      height $height;
      overflow hidden;
      text-overflow ellipsis;
      white-space nowrap;
      cursor pointer;
      border-top 0.0625rem solid #f5f5f5;
      text-align left;
      display: flex;
      align-items center

      &:hover {
        background #f3f3f3 !important;
      }

      &_flowable {
        background #f9f9f9;
      }

      &_selected {
        .Dropdown__item-val {
          &_simple {
            font-weight bold;
          }

          &_with-state {
            &:before {
              color: #fff;
              background-color: #007bff;
            }

            &:after {
              background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3E%3Cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/%3E%3C/svg%3E")
            }
          }
        }
      }
    }

    &__item-val {
      &_simple {
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      &_with-state {
        position: relative;
        padding-left: 1.5rem;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1rem;

        &:before {
          background-color: #cedfff;
          position: absolute;
          width: 1rem;
          height: 1rem;
          pointer-events: none;
          content: "";
          user-select: none;
          left: 0;
          border-radius: .25rem;
          top 0
        }

        &:after {
          position: absolute;
          left: 0;
          display: block;
          width: 1rem;
          height: 1rem;
          content: "";
          background-repeat: no-repeat;
          background-position: center center;
          background-size: 50% 50%;
          top 0
        }
      }
    }

  }
}